extends includes/main_layout.pug

block styles
    // Libraries CSS Files
    link(href='/lib/font-awesome/css/font-awesome.min.css' rel='stylesheet')
    link(href='/lib/animate/animate.min.css' rel='stylesheet')
    link(href='/lib/ionicons/css/ionicons.min.css' rel='stylesheet')
    link(href='/lib/owlcarousel/assets/owl.carousel.min.css' rel='stylesheet')
    link(href='/lib/lightbox/css/lightbox.min.css' rel='stylesheet')

block content

    header#header.fixed-top
        .container
            .logo.float-left
                // Uncomment below if you prefer to use an image logo
                <h1 class="text-light"><a href="#header"><span>Node Store</span></a></h1>
                a.scrollto(href='#intro')
            nav.main-nav.float-right.d-none.d-lg-block
                ul
                    li.active
                        a(href='/') Home
                    li
                        a(href='/add') Add Tasks
                    li
                        a(href='/view') View Tasks

    section#services.section-bg.first_el
        .container
            header.section-header
                h3 Tasks
                p Gotcha Complete em off.
            .row
                each task in tasks
                    .col-md-6.col-lg-5.offset-lg-1.wow.bounceInUp(data-wow-duration='1.4s')
                        .box
                            .icon
                                i.ion-ios-analytics-outline(style='color: #ff689b;')
                            h4.title
                                a(href='#') #{task.task_name}
                            p.description #{task.task_desc}



    a.back-to-top(href='#')
        i.fa.fa-chevron-up
    // Uncomment below i you want to use a preloader
    // <div id="preloader"></div>
    // JavaScript Libraries
    script(src='/lib/jquery/jquery.min.js')
    script(src='/lib/jquery/jquery-migrate.min.js')
    script(src='/lib/bootstrap/js/bootstrap.bundle.min.js')
    script(src='/lib/easing/easing.min.js')
    script(src='/lib/mobile-nav/mobile-nav.js')
    script(src='/lib/wow/wow.min.js')
    script(src='/lib/waypoints/waypoints.min.js')
    script(src='/lib/counterup/counterup.min.js')
    script(src='/lib/owlcarousel/owl.carousel.min.js')
    script(src='/lib/isotope/isotope.pkgd.min.js')
    script(src='/lib/lightbox/js/lightbox.min.js')
    script(src='/js/main.js')
